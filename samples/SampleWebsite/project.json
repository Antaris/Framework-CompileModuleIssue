{
    "webroot": "wwwroot",
    "version": "1.0.0-*",

    "dependencies": {
        "Microsoft.AspNet.Server.IIS": "1.0.0-beta4",
        "Microsoft.AspNet.Server.WebListener": "1.0.0-beta4",
        "Fx.Common": "1.0.0-*",
        "Fx.Core": "1.0.0-*",
        "Fx.Core.Contracts": "1.0.0-*",
        "Fx.Logging.Contracts": "1.0.0-*",
        "Fx.Web.Contracts": "1.0.0-*"
    },

    "commands": {
